{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2020",
    "skipLibCheck":true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "allowJs": true
  },
  "include": [
    "./bin/*.ts",
    "./lib/**/*",
    "./ui/**/*",
    "./test/**/*",
    "./build/**/*"
  ],
}
